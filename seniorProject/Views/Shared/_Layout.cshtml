<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - seniorProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/seniorProject.styles.css" asp-append-version="true" /> *@
        @* <link rel="stylesheet" href="../wwwroot/css/site.css" asp-append-version="true" /> *@

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm mb-3 nav-fill header-color">
            <div class="container-fluid flex-lg-row-reverse justify-content-around">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="text-end main-color align-self-center" asp-area="" asp-controller="Home" asp-action="Index">Woven by Sam</a>
                <div class="collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link nav-color" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-color" asp-area="" asp-controller="Product" asp-action="ProductPage">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-color" asp-area="" asp-controller="Home" asp-action="Privacy">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-color" asp-area="" asp-controller="Home" asp-action="Privacy">Cart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-color" asp-area="" asp-controller="Account" asp-action="Login">Log In</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Woven by Sam - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
