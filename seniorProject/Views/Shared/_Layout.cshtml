@using Microsoft.AspNet.Identity;

@{
    string loginState = "";
    if (@User.Identity.GetUserId() != null){
        loginState = "Logout";
    }
     else{
        loginState = "Login";
    }

    string adminLink = "";
    if(@User.Identity.GetUserId() == "auth0|668f55334b1a2e5770d7031e"){
        adminLink = "nav-link nav-color";
    }
    else{
        adminLink = "nav-link nav-color d-none";
    }
   
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - seniorProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/seniorProject.styles.css" asp-append-version="true" /> *@
        @* <link rel="stylesheet" href="../wwwroot/css/site.css" asp-append-version="true" /> *@

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-expand-md navbar-expand-sm navbar-toggleable-sm mb-3 nav-fill header-color">
            <div class="container-fluid flex-lg-row-reverse justify-content-around flex-md-column flex-sm-column">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <img src='~/Assets/menuIcon.png'>
                </button>
                <a class="text-end main-color align-self-center" asp-area="" asp-controller="Home" asp-action="Index">Woven by Sam</a>
                <div class="collapse d-sm-inline-flex justify-content-end navbar-collapse " style="width:50vw">
                    <ul class="navbar-nav flex-grow-1 flex-md-row flex-sm-row justify-content-space-evenly ">
                        <li class="nav-item">
                            <a class="nav-link nav-color" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-color" asp-area="" asp-controller="Product" asp-action="ProductPage" asp-route-Value="createdDesc">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-color" asp-area="" asp-controller="Home" asp-action="Privacy">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-color" asp-area="" asp-controller="Account" asp-action="ViewCart">Cart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-color" asp-area="" asp-controller="Account" asp-action="@loginState">@loginState</a>
                        </li>
                        <li class="nav-item">
                            <a class="@adminLink" asp-area="" asp-controller="Product" asp-action="Index">Admin</a>
                        </li>
                      
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Woven by Sam - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
